<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="shortcut icon" href="/favicon.png">
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='https://fonts.googleapis.com/css?family=Inconsolata:400,700' rel='stylesheet' type='text/css'>

    <title>Scaling SaaS<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <%= stylesheet_link_tag :site %>
    <%= stylesheet_link_tag :github %>
    <%= javascript_include_tag :analytics %>

    <script type="text/javascript">
      analytics.initialize({
        'Google Analytics': {
           trackingId: 'UA-75340229-1'
         },
         'Drip': {
           account: '8045758'
         }
      });

      analytics.page();
    </script>

    <% unless current_article.nil? %><meta property="article_title" content="<%= current_article.title %>" /><% end %>
    <meta property="og:title" content="Scaling SaaS<%= ' - ' + current_article.title unless current_article.nil? %>" />
    <meta property="og:type" content="text/html" />
    <meta property="og:url" content="http://www.scalingsaas.com<%= current_page.url %>" />
    <meta property="og:image" content="http://www.scalingsaas.com/images/logo-square-300.png" />
  </head>
  <body class="<%= page_classes %>">
    <% page_header_div(current_page.data) do %>
      <div class="page-navigation">
        <div class="site-container">
          <h1 class="site-title">
            <a href="/">
              <% if current_page.data[:header_inverted] %>
                <img src="/images/logo-white.svg" alt="Logo" class="logo" />
              <% else %>
                <img src="/images/logo.svg" alt="Logo" class="logo" />
              <% end %>
              <span class="ss">Scaling SaaS</span>
            </a>
          </h1>

          <ul class="page-header-nav">
            <li class="page-header-nav-item">
              <%= link_to 'About', '/about.html' %>
            </li>

            <li class="page-header-nav-item">
              <%= link_to 'Email Me', 'mailto:derrick@scalingsaas.com' %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="site-container">
      <div class="main-content">
        <%= yield %>
      </div>
    </div>

    <!-- Twitter share buttons -->
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
  </body>
</html>
