<article class="post">
  <h2 class="post-title"><%= link_to article.title, article %></h2>

  <div class="post-metadata">
    <span class="post-author"><%= link_to article.data[:author], '/about.html' %></span>
    &mdash;
    <time class="post-timestamp"><%= article.date.strftime('%B %e, %Y') %></time>
  </div>

  <div class="post-body">
    <% if article.data[:podcast] %>
      <%= partial "podcast_post", locals: { article: article } %>
    <% else %>
      <% if locals[:summary_only] %>
        <%= article.summary %>
        <p><%= link_to "Continue reading &rarr;", article.url %></p>
      <% else %>
        <%= article.body %>
      <% end %>
    <% end %>
  </div>

  <% unless locals[:summary_only] %>
    <div class="post-social">
      <a href="https://twitter.com/share"
         class="twitter-share-button"
         data-url="http://www.scalingsaas.com<%= article.url %>"
         data-text="<%= article.title %>"
         data-via="ScalingSaaS"
         data-size="large">Tweet</a>
  <% end %>
</article>
