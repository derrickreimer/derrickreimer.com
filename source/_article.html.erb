<article class="post">
  <div class="post-header">
    <h2 class="post-title"><%= link_to article.title, article %></h2>
    <div class="post-metadata">
      <time class="post-timestamp"><%= article.date.strftime('%B %e, %Y') %></time>
    </div>
  </div>

  <div class="post-body">
    <% if locals[:summary_only] && !article.data[:no_summary] %>
      <%= article.summary %>
      <p><%= link_to "Continue reading &rarr;", article.url %></p>
    <% else %>
      <%= article.body %>
    <% end %>
  </div>

  <% unless locals[:summary_only] %>
    <div class="post-social">
      <a href="https://twitter.com/share"
         class="twitter-share-button"
         data-url="http://www.derrickreimer.com<%= article.url %>"
         data-text="<%= article.title %>"
         data-via="derrickreimer.com"
         data-size="large">Tweet</a>
  <% end %>
</article>
