<article class="post">
  <h2 class="post-title"><%= link_to article.title, article %></h2>

  <div class="post-metadata">
    <span class="post-author"><%= article.data[:author] %></span>
    &mdash;
    <time class="post-timestamp"><%= article.date.strftime('%B %e, %Y') %></time>
  </div>

  <div class="post-body">
    <%= article.body %>
  </div>

  <div class="post-social">
    <a href="https://twitter.com/share"
       class="twitter-share-button"
       data-url="http://www.scalingsaas.com<%= article.url %>"
       data-text="<%= article.title %>"
       data-via="ScalingSaaS"
       data-size="large">Tweet</a>
</article>
