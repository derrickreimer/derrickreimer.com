<div class="pagination">
  <% if prev_page %>
    <%= link_to '&larr;', prev_page, class: 'pagination-link pagination-link--prev' %>
  <% end %>

  <% if num_pages > 1 %>
    <span class="pagination-summary">
      Page <%= page_number %> of <%= num_pages %>
    </span>
  <% end %>

  <% if next_page %>
    <%= link_to '&rarr;', next_page, class: 'pagination-link pagination-link--next' %>
  <% end %>
</div>
